<%= render 'shared/errors', obj: @chef %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <% if !@chef.new_record? %>
      <h5><%= link_to "Back", recipe_path(@chef), class:"btn btn-warning btn-small" %></h5>
    <% end %>  
    <%= form_for @chef do |f| %>
      <%= f.label :chefname %>
      <%= f.text_field :chefname %>
      
      <%= f.label :email %>
      <%= f.email_field :email %>
      
      <%= f.label :password %>
      <%= f.password_field :password %>
      
      <%= f.submit(@chef.new_record? ? 'Sign Up' : 'Edit Profile', class: "btn btn-success") %>
    <% end %>
  </div>
</div>